<main class="main">
  <div class="inner">
    <div class="work__wrapper">
      <p class="work_hedding">
        <%= @work.title %>
      </p>
      <%= link_to "by #{@work.user.name}さんの作品", work_path, class: :work__user %>
      <% if current_user == @work.user%>
        <div class="work__manage">
          <%= link_to "編集する", edit_work_path(@work), class: :work__btn %>
          <%= link_to "削除する", work_path(@work), method: :delete, class: :work__btn %>
        </div>
      <% end %>
      <div class="work__image">
        <%= image_tag @work.image %>
      </div>
      <div class="work__body">
        <div class="work__detail">
          <p class="detail__title">作品カテゴリー</p>
          <p class="detail__message">
            <%= @work.category.genre %>
          </p>
        </div>
        <div class="work__detail">
          <p class="detail__title">作品コンセプト</p>
          <p class="detail__message">
            <%= @work.concept %>
          </p>
          <p class="detail__title">作品説明</p>
          <%# <div class="detail__explanation_text"> %>
            <p class="detail__explanation">
              <%= @work.explanation %>
            </p>
          <%# </div> %>
        </div>
      </div>
      <div class="work__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
          <%# <%= form_with model: モデル名,local: true do |f|%>
            <div class="field">
              <%# <%= f.label :hoge, "コメント" %><br />
              <%# <%= f.text_field :hoge, id:"comment_content" %>
            </div>
            <div class="actions">
              <%# <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <%# <% end %>
        <%# // ログインしているユーザーには上記を表示する %>
        <ul class="comments_lists">
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
            <li class="comments_list">
              <%# <%= " コメントのテキスト "%>
              <%# <%= link_to "（ ユーザー名 ）", root_path, class: :comment_user %>
            </li>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>
